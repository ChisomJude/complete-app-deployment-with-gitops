apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: student-progress
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/ChisomJude/complete-app-deployment-with-gitops.git
    targetRevision: main
    path: helm/student-progress
  destination:
    server: https://kubernetes.default.svc
    namespace: my-app
  syncPolicy:
    automated:
      prune: true
      selfHeal: true